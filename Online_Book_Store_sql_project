-- fixing orders table

DROP TABLE IF EXISTS dbo.Orders_Stage1;

CREATE TABLE dbo.Orders_Stage1 (
    Order_ID INT PRIMARY KEY,
    Customer_ID INT REFERENCES Customers(Customer_ID),
    Book_ID INT REFERENCES Books(Book_ID),
    Order_Date VARCHAR(100),
    Quantity INT,
    Total_Amount NUMERIC(10, 2)
);

BULK INSERT dbo.Orders_Stage1
FROM 'E:\Data-Analytics\sql_files\SQL (1)\SQL\sql_project2\Orders2.csv'
WITH (
    FIRSTROW = 2,
    FIELDTERMINATOR = ',',
    ROWTERMINATOR = '\n',
    TABLOCK,
    CODEPAGE = '65001'
);


INSERT INTO dbo.Orders ( Order_ID, Customer_ID, Book_ID,Order_Date, Quantity,Total_Amount )
SELECT
    Order_ID,
    Customer_ID,
    Book_ID,
    TRY_CONVERT(DATE, Order_Date, 105), -- 105 = DD-MM-YYYY
    Quantity,
    Total_Amount
FROM dbo.Orders_Stage1;

